<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2 class="text-center">Modifier l'article : <%= @article.article_title %></h2>
        <%= form_tag("/articles/#{params[:id]}", method: "patch") do %>
          <div class="form-group">
            <%= label_tag(:article_title, "Titre de l'article :") %>
            <%= text_field_tag(:article_title, @article.article_title, class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= label_tag(:user_id, "Auteur :") %>
            <%= select_tag(:user_id, options_from_collection_for_select(@users, 'id', 'name'), class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= label_tag(:category_id, "CatÃ©gorie :") %>
            <%= select_tag(:category_id, options_from_collection_for_select(@categories, 'id', 'category_title'), class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= label_tag(:article_content, "Description :") %>
            <%= text_area_tag(:article_content, @article.article_content, class: 'form-control') %>
          </div>
          <div class="form-group">
              <%= submit_tag("Modifier l'article", class: 'btn btn-primary btn-block') %>
          </div>
        <% end %>
        <%= form_tag("/articles/#{params[:id]}", method: "delete", class: 'text-center') do %>
          <%= submit_tag("Supprimer l'article", class: 'btn btn-primary btn-sm') %>
        <% end %>
    </div>
  </div>
</div>