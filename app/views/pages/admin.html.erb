<% content_for :meta_title, "#{DEFAULT_META["meta_title"]} - #{DEFAULT_META["meta_product_name"]} - Admin" %>
<% content_for :meta_description, "#{DEFAULT_META["meta_description"]}"  %>
<!-- <%# content_for :meta_image, cl_image_path(@offer.photo.path) %> -->

<% if @current_user %>

<div class="container mg-content-top">
    <div class="row">
        <div class="col-md-6">
            <h2>Ajouter un projet</h2>
            <%= form_tag "/portfolios", method: "post" do %>
                <form>
                    <div class="form-group">
                        <label>Catégorie du projet</label>
                        <select name="portfolio_cat" class="form-control border">
                           <option value="Vitrine">Vitrine</option>
                           <option value="Ecommerce">Ecommerce</option>
                           <option value="Autre">Autre</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control border" placeholder="Lien de l'image" name="portfolio_image_link" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control border" placeholder="Balise alt de l'image" name="portfolio_image_alt" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control border" placeholder="Titre du projet" name="portfolio_title" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control border" placeholder="Description du projet" name="portfolio_desc" />
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            <% end %>
        </div>
        <div class="col-md-6">
            <h2>Liste des projets</h2>
            <% @portfolios.each do |portfolio| %>
            <p><a href="/portfolios/<%= portfolio.id %>"><%= portfolio.portfolio_title %></a></p>
            <% end %>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <h2>Ajouter un article</h2>
            <%= form_tag "/articles", method: "post" do %>
                <form>
                    <div class="form-group">
                        <label>Catégorie de l'article</label>
                        <select name="category_id" class="form-control border">
                           <% @categories.each do |cat| %>
                           <option value="<%= cat.id %>"><%= cat.category_title %></option>
                           <% end %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Auteur de l'article</label>
                        <select name="user_id" class="form-control border">
                           <% @users.each do |user| %>
                           <option value="<%= user.id %>"><%= user.name %></option>
                           <% end %>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control border" placeholder="Lien de la miniature" name="article_image_link" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control border" placeholder="Titre de l'article" name="article_title" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control border" placeholder="Meta desc de l'article" name="article_meta_desc" />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control border" name="article_content" rows="8"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            <% end %>
        </div>
        <div class="col-md-6">
            <h2>Liste des articles</h2>
            <% @articles.each do |article| %>
            <p><a href="/articles/<%= article.id %>"><%= article.article_title %></a></p>
            <% end %>
        </div>
    </div>
</div>

<% else %>
    <h1>Connexion</h1>
    <a href="/">Retourner à l'accueil</a>
    <%= form_tag "/users/login", method: :post do %>
      <input type="text" name="name" />
      <input type="password" name="password" />
      <input type="submit" value="Se connecter" />
    <% end %>
<% end %>